# User settings are in local config (not tracked by git)
# Create ~/.config/git/config.local with:
#   [user]
#     name = Your Name
#     email = your@email.com
[include]
  path = ~/.config/git/config.local

[credential]
	helper = store --file ~/.config/git/.git-credentials

[color]
  ui = true

[init]
  defaultBranch  = main

[core]
  pager = delta  --side-by-side

  editor = vim
  autocrlf = input
[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true
  dark = true

[merge]
  conflictstyle = zdiff3

[alias]
  st = status
  ss = status -s
  co = checkout
  br = branch
  sw = switch
  pr = pull -r
  ps = push
  fixit = commit --amend --no-edit
  fixmsg = commit --amend
  
